@model Proje.Models.Candidate

<div class="display-6">
    Login
</div>
<!-- post ile sunucu tarafında kaynak oluşturma-->
<form method="post" asp-action="Login">
    <!-- taghelpers: href yerine asp-action ya da
    asp-controller vb. kullanılması -->
    <div class="text-danger" asp-validation-summary="All"></div> <!-- tüm doğrulama özetini sunmak -->

    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>


    <div>
        <button class="btn btn-primary" type="submit">Log in</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
        <a class="btn btn-warning" asp-controller="Profile" asp-action="Index">Profile</a>
    </div>
</form>