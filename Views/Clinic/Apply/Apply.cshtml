@model Proje.Models.Candidate

<div class="display-6">
    Apply
</div>
<!-- post ile sunucu tarafında kaynak oluşturma-->
<form method="post" asp-action="Apply/Apply"> <!-- taghelpers: href yerine asp-action ya da 
    asp-controller vb. kullanılması -->
    <div class="text-danger" asp-validation-summary="All"></div> <!-- tüm doğrulama özetini sunmak -->

    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>


    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>